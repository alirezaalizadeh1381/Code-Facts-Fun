@model Code.Models.Product
@{
	ViewData["Title"] = "Delete Movie";
}
<style>
	.Header {
		background-color: darkcyan;
		margin: 0;
		padding: 0;
	}
</style>

<div class="card shadow border-0 mt-4 Header">
	<div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Delete Product</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<form method="post">
			<input asp-for="Id" hidden />
			<div class="border p-3 mt-4">
				<div class="row pb-2">
					<h2 class="text-light">Delete Product</h2>
				</div>
				<div asp-validation-summary="ModelOnly"></div>
				<div class="form-floating pyh-2 col-12 mt-2">
					<input asp-for="Title" disabled class="form-control border-0 shadow" />
					<label asp-for="Title" class="ms-2"></label>

				</div>
				<div class="form-floating pyh-2 col-12 mt-2">
					<input asp-for="Description" disabled class="form-control border-0 shadow" />
					<label asp-for="Description" class="ms-2"></label>

				</div>
				<div class="form-floating pyh-2 col-12 mt-2">
					<input asp-for="Id" disabled class="form-control border-0 shadow" />
					<label asp-for="Id" class="ms-2"></label>

				</div>
				<div class="row justify-content-center">
					<div class="col-6 row col-md-3 m-lg-2 me-2">
						<button type="submit" class="btn btn-danger form-control">Delete</button>
					</div>
					<div class="col-6 row col-md-3 m-lg-2 me-2">
						<a asp-controller="Library" asp-action="Index" class="btn btn-primary border  form-control">
							Back to List
						</a>
					</div>
				</div>


			</div>

		</form>
	</div>
</div>

@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}