@model Code.Models.Product
@{
	ViewData["Title"] = "Edit Movie";
}
<style>
	.Header {
		background-color: darkcyan;
		margin: 0;
		padding: 0;
	}
</style>

<div class="card shadow border-0 mt-4 Header">
	<div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Edit Product</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<form method="post">
			<div class="form-floating py-2 col-12">
				<input asp-for="@Model.Title" class="form-control border-0 shadow" />
				<label asp-for="@Model.Title" class="ms-2"></label>
				<span asp-validation-for="@Model.Title" class="text-danger"></span>
			</div>
			<div class="form-floating py-2 col-12 mt-2">
				<input asp-for="@Model.Description" class="form-control shadow border-0" />
				<label asp-for="@Model.Description" class="ms-2"></label>
				<span asp-validation-for="@Model.Description" class="text-danger"></span>
			</div>
			<div class="form-floating py-2 col-12 mt-2">
				<input asp-for="@Model.Author" class="form-control shadow border-0" />
				<label asp-for="@Model.Author" class="ms-2"></label>
				<span asp-validation-for="@Model.Author" class="text-danger"></span>
			</div>
			<div class="row mt-3 justify-content-center">
				<div class="col-6 row col-md-3 me-2">
					<button type="submit" class="btn btn-primary form-control">Update</button>
				</div>
				<div class="col-6 row col-md-3 me-2">
					<a asp-controller="Library" asp-action="Index" class="btn btn-primary border form-contro">Back to list</a>
				</div>
			</div>
		</form>
	</div>
</div>

@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}
